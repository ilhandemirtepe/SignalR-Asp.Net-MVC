@model WebChat.Models.UserAccount

@{
    Layout = null;
}

<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

<!-- Optional theme
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">-->

<section id="loginform" class="outer-wrapper">
    <div class="inner-wrapper">
        <div class="container">
            <div class="row" style="margin-top:30px">
                <div class="col-sm-6 col-sm-offset-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading panel text-center"> <b> Chat Programing Register  </b></div>
                        <div class="panel-body>
                            <div class=" container">

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <div class="form-group">
                                            <div class="col-md-3"></div>
                                            <div class="col-md-8">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                @if (ViewBag.Message != null)
                                                {
                                                    @ViewBag.Message
                                                }
                                            </div>
                                            <div class="col-md-1"></div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-1"></div>
                                            <div class="col-md-2">Adı</div>
                                            <div class="col-md-8">
                                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-1"></div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-1"></div>
                                            <div class="col-md-2">Kullanıcı Adı</div>
                                            <div class="col-md-8">
                                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-1"></div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-1"></div>
                                            <div class="col-md-2">Şifre</div>
                                            <div class="col-md-8">
                                                @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-1"></div>
                                        </div>

                                        <div class="form-group btn btn-block">

                                            <input type="submit" value="Kaydet" class="btn btn-primary" />
                                            <a href="@Url.Action("Login","Home")"> <input type="text" value="Giriş Yap" class="btn btn-danger" />   </a>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
