@model WebChat.Models.UserAccount

@{
    Layout = null;
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

<!-- Optional theme
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">-->

<section id="loginform" class="outer-wrapper">
    <div class="inner-wrapper">
        <div class="container">
            <div class="row" style="margin-top:30px">
                <div class="col-sm-4 col-sm-offset-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading panel text-center"> <b> Chat Programing Login  </b></div>
                        <div class="panel-body>
                            <div class=" container">
                                @using (Html.BeginForm())
                                {
                                    <div class=" form-group">
                                      
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", required = "", placeholder = "kullanıcı adı" } })
                                        @*<input type="password" class="form-control" placeholder="kullanıcı adı">*@
                                    </div>
                                    <div class=" form-group">
                                        @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control", required = "", placeholder = "şifre" } })
                                        @*@Html.Password("pa", null, new { @class = "form-control", placeholder = "şifre", required = "" })*@
                                        @*<input type="password" class="form-control" placeholder="şifre">*@
                                    </div>
                                  
                                    <input type="submit" name="name" class="btn btn-success" value="Login " />
                                      <a href="@Url.Action("KayitOl","Home")"> <input type="text" value="Kayıt Ol" class="btn btn-danger" />   </a>

                                    <span class="alert alert-danger" style="display:none" role="dialog">
                                        @if (ViewData["Message"] != null)
                                        {
                                            <script language="javascript">
                                                alert('@ViewData["Message"]');
                                            </script>
                                        }
                                    </span>
                                }
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
</section>





